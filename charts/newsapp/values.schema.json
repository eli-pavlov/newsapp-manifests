{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "backend":  { "type": "object" },
    "frontend": { "type": "object" },
    "db":       { "type": "object" },
    "networkPolicy": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "backendEgressWeb": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "exceptCidrs": {
              "type": "array",
              "items": { "type": "string" }
            },
            "ports": {
              "type": "array",
              "items": { "type": "integer", "minimum": 1, "maximum": 65535 }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
